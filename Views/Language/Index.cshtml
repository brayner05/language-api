@model languages_app.ViewModels.LanguageListViewModel

@{
    ViewData["Title"] = "Hello, World!";
}

<h2>Language</h2>
<ul>
    @foreach (var language in Model.Languages) {
        <li>
            <a asp-asp-controller="Language" asp-action="LanguageInfo" asp-route-id="@language.LanguageId">
                @language.Name
            </a>
        </li>
    }
</ul>